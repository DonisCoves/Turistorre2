<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        style="@style/TNegritaGrande"
        android:text="@string/textoTitulo"
        android:id="@+id/tvTitSelecBando"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" />


    <ImageView
        android:id="@+id/ivSelecBando"
        style="@style/Imagen_bounds"
        android:layout_height="0dp"
        android:src="@drawable/img_8"
        android:layout_weight="7" />

    <ScrollView
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="15dp"
        android:layout_width="match_parent">

        <TextView
            style="@style/TNegritaMediano"
            android:text="@string/textoLargo"
            android:id="@+id/tvDescSelecBando"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>